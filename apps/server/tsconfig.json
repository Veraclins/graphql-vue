 {
   "compilerOptions": {
     "module": "commonjs",
     "moduleResolution": "node",
     "plugins": [{
       "name": "typescript-tslint-plugin",
       "alwaysShowRuleFailuresAsWarnings": false,
       "jsEnable": true
     }],
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "target": "es6",
     "noImplicitAny": true,
     "suppressImplicitAnyIndexErrors": true,
     "rootDir": "src",
     "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
     "sourceMap": true,
     "allowJs": true,
     "outDir": "dist",
     "removeComments": true,
     "alwaysStrict": true,
     "baseUrl": ".",
     "paths": {
       "*": ["node_modules/*", "src/types/*"],
       "@errors": ["src/errors/index.ts"],
       "@generated": ["src/generated/index.ts"],
       "@generated/*": ["src/generated/*"],
       "@directives": ["src/directives/index.ts"],
       "@directives/*": ["src/directives/*"],
       "@middleware": ["src/middleware/index.ts"],
       "@middleware/*": ["src/middleware/*"],
       "@models": ["src/models/index.ts"],
       "@models/*": ["src/models/*"],
       "@resolvers": ["src/resolvers/index.ts"],
       "@resolvers/*": ["src/resolvers/*"],
       "@schema": ["src/schema/index.ts"],
       "@schema/*": ["src/schema/*"],
       "@services": ["src/services/index.ts"],
       "@services/*": ["src/services/*"],
       "@utils": ["src/utils/index.ts"],
       "@utils/*": ["src/utils/*"],
       "@validations": ["src/validations/index.ts"],
       "@validations/*": ["src/validations/*"],
       "@root": ["src/index.ts"],
       "@root/*": ["src/*"],
     },
     "types": ["node", "jest"]
   },
   "include": ["src/**/*", "node_modules/@types"],
   "exclude": ["src/generated/*"]
 }
